@using MVCDay2.ViewModel
@model Instractor
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (Model != null && Model.Id != null)
{
    <form method="post" action="/InstractorListNew/SaveEdit/@Model.Id">

        <label>InsName</label>
        <input type="text" id="InsName" name="InsName" value="@Model.InsName" class="form-check form-control" />
        <label>InsImage</label>
        <input type="text" id="InsImage" name="InsImage" value="@Model.InsImage" class="form-check form-control" />
        <label>InsSalary</label>
        <input type="number" id="InsSalary" name="InsSalary" value="@Model.InsSalary" class="form-check form-control" />
        <label>InsAddress</label>
        <input type="text" id="InsAddress" name="InsAddress" value="@Model.InsAddress" class="form-check form-control" />

        <select class="form-check form-control" id="DeptId" name="DeptId">
            @foreach (var DeptItem in ViewBag.Deptlist)
            {
                if (DeptItem.Id == Model.DeptId)//Pk=Fk
                {
                    <option value="@DeptItem.Id" selected>
                        @DeptItem.DeptName
                    </option>
                }
                else
                {
                    <option value="@DeptItem.Id">@DeptItem.DeptName </option>
                }
            }
        </select>
        <select class="form-check form-control" id="CourseId" name="CourseId">
            @foreach (var couitem in ViewBag.crslist)
            {
                if (couitem.Id == Model.CourseId)//Pk=Fk
                {
                    <option value="@couitem.Id" selected>
                        @couitem.CourseName
                    </option>
                }
                else
                {
                    <option value="@couitem.Id"> @couitem.CourseName </option>
                }
            }
        </select>
        <input type="submit" value="Save" class="btn btn-success" />
    </form>
}
<a href="/InstractorListNew/Show">Back To list</a>

